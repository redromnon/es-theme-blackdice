            <path>./_inc/images/bg_color.png</path>
            <origin>0.5 0.5</origin>
            <pos>0.5 0.5</pos>
            <size>1 1</size>
            <tile>true</tile>
            <color>1a1a1a</color>
        </image>

        <helpsystem name="help">
			<textColor>ffffff</textColor>
			<iconColor>ffffff</iconColor>
			<fontPath>./_inc/fonts/Ubuntu-Medium.ttf</fontPath>
			<fontSize>0.03</fontSize>
		</helpsystem>


    </view>



<!-- SYSTEM -->
    <view name = "system">

     <image name = "console_life_BACKGROUND" extra = "true">    
            <path>./_inc/images/bg_color.png</path>
			<origin>0.5 0.5</origin>
			<pos>0.5 0.37</pos>
			<size>1 0.04</size>
			<color>1a1a1a95</color>
     </image>

     
     <text name = "console_life" extra = "true">
            <fontPath>./_inc/fonts/Ubuntu-Bold.ttf</fontPath>
            <fontSize>0.03</fontSize>
            <origin>0.5 0.5</origin>            
            <pos>0.5 0.37</pos>
            <color>f2f2f2</color>
     </text> 


    </view>



    <view name = "basic, detailed">

